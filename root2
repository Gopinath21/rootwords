                    { word: "Dangerous", def: "Full of danger; risky" },
                    { word: "Famous", def: "Known about by many people" },
                    { word: "Curious", def: "Eager to know or learn" },
                    { word: "Ambitious", def: "Having a strong desire for success" }
                ]
            },
            {
                suffix: "-ship",
                meaning: "state, condition, skill",
                examples: [
                    { word: "Friendship", def: "The state of being friends" },
                    { word: "Leadership", def: "The state or skill of leading" },
                    { word: "Relationship", def: "The way people or things are connected" },
                    { word: "Scholarship", def: "Academic study or achievement" }
                ]
            },
            {
                suffix: "-ward",
                meaning: "in the direction of",
                examples: [
                    { word: "Forward", def: "In the direction ahead" },
                    { word: "Backward", def: "In the direction behind" },
                    { word: "Upward", def: "In the direction up" },
                    { word: "Downward", def: "In the direction down" }
                ]
            }
        ];

        let currentTab = 'roots';

        function switchTab(tab) {
            currentTab = tab;
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tab + '-content').classList.add('active');
            
            document.getElementById('search').value = '';
            renderContent();
        }

        function renderRoots(searchTerm = '') {
            const container = document.getElementById('roots-list');
            container.innerHTML = '';
            
            const filtered = rootWords.filter(item => 
                item.root.toLowerCase().includes(searchTerm) ||
                item.meaning.toLowerCase().includes(searchTerm) ||
                item.words.some(w => 
                    w.word.toLowerCase().includes(searchTerm) ||
                    w.def.toLowerCase().includes(searchTerm)
                )
            );
            
            if (filtered.length === 0) {
                container.innerHTML = '<div class="no-results">No roots found matching your search.</div>';
                return;
            }
            
            filtered.forEach(item => {
                const card = document.createElement('div');
                card.className = 'root-card';
                
                card.innerHTML = `
                    <div class="root-header">
                        <div>
                            <div class="root-main">${item.root}</div>
                            <div class="root-meaning">"${item.meaning}"</div>
                        </div>
                        <div class="root-origin">
                            <strong>Origin:</strong> ${item.origin}
                        </div>
                    </div>
                    <div class="root-body">
                        <strong style="font-size: 1.1em; color: #495057;">Related Words:</strong>
                        <div class="word-family">
                            ${item.words.map(w => `
                                <div class="word-item">
                                    <div class="word-name">${w.word}</div>
                                    <div class="word-breakdown">${w.breakdown}</div>
                                    <div class="word-def">${w.def}</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;
                
                container.appendChild(card);
            });
            
            document.getElementById('visible-items').textContent = filtered.length;
        }

        function renderPrefixes(searchTerm = '') {
            const container = document.getElementById('prefixes-list');
            container.innerHTML = '';
            
            const filtered = prefixes.filter(item =>
                item.prefix.toLowerCase().includes(searchTerm) ||
                item.meaning.toLowerCase().includes(searchTerm) ||
                item.examples.some(e =>
                    e.word.toLowerCase().includes(searchTerm) ||
                    e.def.toLowerCase().includes(searchTerm)
                )
            );
            
            if (filtered.length === 0) {
                container.innerHTML = '<div class="no-results">No prefixes found matching your search.</div>';
                return;
            }
            
            const grid = document.createElement('div');
            grid.className = 'prefix-suffix-grid';
            
            filtered.forEach(item => {
                const card = document.createElement('div');
                card.className = 'affix-card';
                
                card.innerHTML = `
                    <div class="affix-header">
                        <div class="affix-title">${item.prefix}</div>
                        <div class="affix-meaning">${item.meaning}</div>
                    </div>
                    <div class="affix-body">
                        ${item.examples.map(e => `
                            <div class="example-word">
                                <strong>${e.word}</strong><br>
                                ${e.def}
                            </div>
                        `).join('')}
                    </div>
                `;
                
                grid.appendChild(card);
            });
            
            container.appendChild(grid);
            document.getElementById('visible-items').textContent = filtered.length;
        }

        function renderSuffixes(searchTerm = '') {
            const container = document.getElementById('suffixes-list');
            container.innerHTML = '';
            
            const filtered = suffixes.filter(item =>
                item.suffix.toLowerCase().includes(searchTerm) ||
                item.meaning.toLowerCase().includes(searchTerm) ||
                item.examples.some(e =>
                    e.word.toLowerCase().includes(searchTerm) ||
                    e.def.toLowerCase().includes(searchTerm)
                )
            );
            
            if (filtered.length === 0) {
                container.innerHTML = '<div class="no-results">No suffixes found matching your search.</div>';
                return;
            }
            
            const grid = document.createElement('div');
            grid.className = 'prefix-suffix-grid';
            
            filtered.forEach(item => {
                const card = document.createElement('div');
                card.className = 'affix-card';
                
                card.innerHTML = `
                    <div class="affix-header">
                        <div class="affix-title">${item.suffix}</div>
                        <div class="affix-meaning">${item.meaning}</div>
                    </div>
                    <div class="affix-body">
                        ${item.examples.map(e => `
                            <div class="example-word">
                                <strong>${e.word}</strong><br>
                                ${e.def}
                            </div>
                        `).join('')}
                    </div>
                `;
                
                grid.appendChild(card);
            });
            
            container.appendChild(grid);
            document.getElementById('visible-items').textContent = filtered.length;
        }

        function renderContent() {
            const searchTerm = document.getElementById('search').value.toLowerCase();
            
            if (currentTab === 'roots') {
                renderRoots(searchTerm);
                document.getElementById('total-roots').textContent = rootWords.length;
            } else if (currentTab === 'prefixes') {
                renderPrefixes(searchTerm);
                document.getElementById('total-roots').textContent = prefixes.length;
            } else if (currentTab === 'suffixes') {
                renderSuffixes(searchTerm);
                document.getElementById('total-roots').textContent = suffixes.length;
            }
        }

        document.getElementById('search').addEventListener('input', renderContent);
        
        // Initial render
        renderContent();
    </script>
</body>
</html>
